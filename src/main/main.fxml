<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import main.ui.EnumChoiceBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.TextArea?>
<GridPane fx:controller="main.MainController"
          xmlns:fx="http://javafx.com/fxml"
          prefHeight="-Infinity"
          prefWidth="-Infinity"
          style="-fx-padding: 16 16 16 16;">

    <GridPane GridPane.rowIndex="0"
              style="-fx-padding: 16 16 16 16;">

        <fx:define>
            <ToggleGroup fx:id="regexMode"/>
        </fx:define>

        <Label text="Input"
               GridPane.rowIndex="0"
               GridPane.columnIndex="0"
               style="-fx-padding: 0 0 16 0; -fx-font-weight: bold; -fx-wrap-text:true; -fx-font-size: 26;"/>

        <Label text="Mode:"
               GridPane.rowIndex="1"
               GridPane.columnIndex="0"
               style="-fx-padding: 0 0 16 0;"/>

        <HBox spacing="10"
              GridPane.rowIndex="1"
              GridPane.columnIndex="1"
              alignment="CENTER_LEFT"
              style="-fx-padding: 0 0 16 0;">

            <RadioButton fx:id="inputMode" text="Input" userData="INPUT" toggleGroup="$regexMode" selected="true"/>
            <RadioButton fx:id="builderMode" text="Builder" userData="BUILDER" toggleGroup="$regexMode"/>
        </HBox>

        <Label text="RegEx:"
               GridPane.rowIndex="2"
               GridPane.columnIndex="0"
               style="-fx-padding: 0 0 16 0;"/>

        <HBox spacing="10"
              GridPane.rowIndex="2"
              GridPane.columnIndex="1"
              alignment="CENTER_LEFT"
              style="-fx-padding: 0 0 16 0;">

            <TextField fx:id="regexField"/>

            <EnumChoiceBox fx:id="operatorChoiceBox"
                           enumType="main.model.Operator"
                           visible="false"
                           prefHeight="21.0"
                           maxWidth="92.0"/>
        </HBox>

        <Label text="Sentence:"
               GridPane.rowIndex="3"
               GridPane.columnIndex="0"
               style="-fx-padding: 0 0 16 0;"/>

        <TextArea fx:id="sentenceBox"
                  GridPane.rowIndex="3"
                  GridPane.columnIndex="1"
                  wrapText="true"/>

        <columnConstraints>
            <ColumnConstraints percentWidth="20"/>
            <ColumnConstraints percentWidth="80"/>
        </columnConstraints>

    </GridPane>

    <HBox spacing="10"
          GridPane.rowIndex="1"
          style="-fx-padding: 16 16 16 16;">

        <Button fx:id="runButton"
                text="Run"
                onAction="#onResultButton"/>

        <Button fx:id="resetRegex"
                text="Reset"
                onAction="#resetRegex"/>

        <Button fx:id="runExample"
                text="Example"
                onAction="#onExampleButton"/>

        <Button fx:id="addRegex"
                visible="false"
                text="Add"
                onAction="#addRegex"/>

    </HBox>

    <VBox GridPane.rowIndex="2"
          style="-fx-padding: 16 16 16 16;">

        <Label text="Log"
               style="-fx-padding: 0 0 16 0; -fx-font-weight: bold; -fx-wrap-text:true; -fx-font-size: 26;"/>

        <ListView fx:id="logList"/>
    </VBox>

    <columnConstraints>
        <ColumnConstraints percentWidth="100"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="35" minHeight="10.0" prefHeight="106.0" vgrow="ALWAYS"/>
        <RowConstraints percentHeight="10" minHeight="10.0" prefHeight="106.0" vgrow="ALWAYS"/>
        <RowConstraints percentHeight="55" minHeight="10.0" prefHeight="106.0" vgrow="ALWAYS"/>
    </rowConstraints>

</GridPane>