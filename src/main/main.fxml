<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<GridPane fx:controller="main.MainController"
          xmlns:fx="http://javafx.com/fxml"
          prefHeight="-Infinity"
          prefWidth="-Infinity"
          style="-fx-padding: 16 16 16 16;">

    <GridPane GridPane.rowIndex="0"
              style="-fx-padding: 16 16 16 16;">

        <fx:define>
            <ToggleGroup fx:id="automataType"/>
            <ToggleGroup fx:id="languageMode"/>
        </fx:define>

        <Label text="Fields"
               GridPane.rowIndex="0"
               GridPane.columnIndex="0"
               style="-fx-padding: 0 0 16 0; -fx-font-weight: bold; -fx-wrap-text:true; -fx-font-size: 26;"/>


        <Label text="Automata:"
               GridPane.rowIndex="1"
               GridPane.columnIndex="0"
               style="-fx-padding: 0 0 16 0;"/>

        <HBox spacing="10"
              GridPane.rowIndex="1"
              GridPane.columnIndex="1"
              alignment="CENTER_LEFT"
              style="-fx-padding: 0 0 16 0;">

            <RadioButton text="Deterministic" userData="DFA" toggleGroup="$automataType"
                         selected="true"/>
            <RadioButton text="Nondeterministic" userData="NDFA" toggleGroup="$automataType"/>
        </HBox>

        <Label text="Language:"
               GridPane.rowIndex="2"
               GridPane.columnIndex="0"
               style="-fx-padding: 0 0 16 0;"/>

        <HBox spacing="10"
              GridPane.rowIndex="2"
              GridPane.columnIndex="1"
              alignment="CENTER_LEFT"
              style="-fx-padding: 0 0 16 0;">

            <RadioButton text="Start" userData="START" toggleGroup="$languageMode" selected="true"/>
            <RadioButton text="Contains" userData="CONTAINS" toggleGroup="$languageMode"/>
            <RadioButton text="Ends" userData="ENDS" toggleGroup="$languageMode"/>
        </HBox>

        <Label text="RegEx:"
               GridPane.rowIndex="3"
               GridPane.columnIndex="0"
               style="-fx-padding: 0 0 16 0;"/>

        <HBox spacing="10"
              GridPane.rowIndex="3"
              GridPane.columnIndex="1"
              alignment="CENTER_LEFT"
              style="-fx-padding: 0 0 16 0;">

            <TextField fx:id="regexField"/>
            <TextField fx:id="lengthField" maxWidth="64"/>
        </HBox>

        <Label text="String:"
               GridPane.rowIndex="4"
               GridPane.columnIndex="0"
               style="-fx-padding: 0 0 16 0;"/>


        <HBox spacing="10"
              GridPane.rowIndex="4"
              GridPane.columnIndex="1"
              alignment="CENTER_LEFT"
              style="-fx-padding: 0 0 16 0;">

            <TextField fx:id="inputField"/>

        </HBox>

        <columnConstraints>
            <ColumnConstraints percentWidth="20"/>
            <ColumnConstraints percentWidth="80"/>
        </columnConstraints>

    </GridPane>

    <HBox spacing="10"
          GridPane.rowIndex="1"
          style="-fx-padding: 16 16 16 16;">

        <Button fx:id="runButton"
                text="Run"
                onAction="#onRunButton"/>

        <Button fx:id="setExample"
                text="Load Example"
                onAction="#onExampleButton"/>

        <Button fx:id="resetButton"
                text="Reset"
                onAction="#onResetButton"/>

    </HBox>

    <VBox GridPane.rowIndex="2"
          style="-fx-padding: 16 16 16 16;">

        <Label text="Log"
               style="-fx-padding: 0 0 16 0; -fx-font-weight: bold; -fx-wrap-text:true; -fx-font-size: 26;"/>

        <ListView fx:id="logList"/>
    </VBox>

    <columnConstraints>
        <ColumnConstraints percentWidth="100"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="35" minHeight="10.0" prefHeight="106.0" vgrow="ALWAYS"/>
        <RowConstraints percentHeight="10" minHeight="10.0" prefHeight="106.0" vgrow="ALWAYS"/>
        <RowConstraints percentHeight="55" minHeight="10.0" prefHeight="106.0" vgrow="ALWAYS"/>
    </rowConstraints>

</GridPane>