<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import main.ui.EnumChoiceBox?>
<GridPane fx:controller="main.MainController"
          xmlns:fx="http://javafx.com/fxml"
          prefHeight="-Infinity"
          prefWidth="-Infinity"
          style="-fx-padding: 16 16 16 16;">

    <GridPane GridPane.rowIndex="0"
              style="-fx-padding: 16 16 16 16;">

        <fx:define>
            <ToggleGroup fx:id="inputType"/>
            <ToggleGroup fx:id="automataType"/>
            <ToggleGroup fx:id="languageMode"/>
        </fx:define>

        <Label text="Fields"
               GridPane.rowIndex="0"
               GridPane.columnIndex="0"
               style="-fx-padding: 0 0 16 0; -fx-font-weight: bold; -fx-wrap-text:true; -fx-font-size: 26;"/>

        <Label text="Input source:"
               GridPane.rowIndex="1"
               GridPane.columnIndex="0"
               style="-fx-padding: 0 0 16 0;"/>

        <HBox spacing="10"
              GridPane.rowIndex="1"
              GridPane.columnIndex="1"
              alignment="CENTER_LEFT"
              style="-fx-padding: 0 0 16 0;">

            <RadioButton text="Example" userData="EXAMPLE" toggleGroup="$inputType" selected="true"/>
            <RadioButton text="Custom" userData="USER" toggleGroup="$inputType"/>
        </HBox>

        <Label text="Result automata:"
               GridPane.rowIndex="2"
               GridPane.columnIndex="0"
               style="-fx-padding: 0 0 16 0;"/>

        <HBox spacing="10"
              GridPane.rowIndex="2"
              GridPane.columnIndex="1"
              alignment="CENTER_LEFT"
              style="-fx-padding: 0 0 16 0;">

            <RadioButton text="NDFA" userData="NDFA" toggleGroup="$automataType" selected="true"/>
            <RadioButton text="DFA" userData="DFA" toggleGroup="$automataType"/>
            <RadioButton text="M-DFA" userData="MDFA" toggleGroup="$automataType"/>
        </HBox>

        <Label text="Custom language:"
               GridPane.rowIndex="3"
               GridPane.columnIndex="0"
               style="-fx-padding: 0 0 16 0;"/>

        <HBox spacing="10"
              GridPane.rowIndex="3"
              GridPane.columnIndex="1"
              alignment="CENTER_LEFT"
              style="-fx-padding: 0 0 16 0;">

            <RadioButton fx:id="noneRadioButton" text="None" userData="NONE" toggleGroup="$languageMode" selected="true"/>
            <RadioButton fx:id="startRadioButton" text="Start" userData="START" toggleGroup="$languageMode" disable="true"/>
            <RadioButton fx:id="containRadioButton" text="Contains" userData="CONTAINS" toggleGroup="$languageMode" disable="true"/>
            <RadioButton fx:id="endRadioButton" text="Ends" userData="ENDS" toggleGroup="$languageMode" disable="true"/>
        </HBox>

        <Label text="User input:"
               GridPane.rowIndex="4"
               GridPane.columnIndex="0"
               style="-fx-padding: 0 0 16 0;"/>

        <EnumChoiceBox fx:id="exampleChoiceBox"
                       enumType="main.model.example.NdfaExampleId"
                       prefHeight="11.0"
                       prefWidth="105.0"
                       GridPane.rowIndex="4"
                       GridPane.columnIndex="1"
                       style="-fx-padding: 0 0 16 0;"/>

        <HBox fx:id="userInput"
              visible="false"
              spacing="10"
              GridPane.rowIndex="4"
              GridPane.columnIndex="1"
              alignment="CENTER_LEFT"
              style="-fx-padding: 0 0 16 0;">

            <TextField fx:id="regexField"/>
            <TextField fx:id="lengthField" maxWidth="64"/>
        </HBox>

        <Label text="Validate String:"
               GridPane.rowIndex="5"
               GridPane.columnIndex="0"
               style="-fx-padding: 0 0 16 0;"/>


        <HBox spacing="10"
              GridPane.rowIndex="5"
              GridPane.columnIndex="1"
              alignment="CENTER_LEFT"
              style="-fx-padding: 0 0 16 0;">

            <TextField fx:id="inputField"/>

        </HBox>

        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>

    </GridPane>

    <HBox spacing="10"
          GridPane.rowIndex="1"
          style="-fx-padding: 16 16 16 16;">

        <Button fx:id="runButton"
                text="Run"
                onAction="#onRunButton"/>

        <Button fx:id="setExample"
                text="Load Example"
                onAction="#onExampleButton"/>

        <Button fx:id="resetButton"
                text="Reset"
                onAction="#onResetButton"/>

    </HBox>

    <VBox GridPane.rowIndex="2"
          style="-fx-padding: 16 16 16 16;">

        <Label text="Log"
               style="-fx-padding: 0 0 16 0; -fx-font-weight: bold; -fx-wrap-text:true; -fx-font-size: 26;"/>

        <ListView fx:id="logList"/>
    </VBox>

    <columnConstraints>
        <ColumnConstraints percentWidth="100"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="35" minHeight="10.0" prefHeight="106.0" vgrow="ALWAYS"/>
        <RowConstraints percentHeight="10" minHeight="10.0" prefHeight="106.0" vgrow="ALWAYS"/>
        <RowConstraints percentHeight="55" minHeight="10.0" prefHeight="106.0" vgrow="ALWAYS"/>
    </rowConstraints>

</GridPane>