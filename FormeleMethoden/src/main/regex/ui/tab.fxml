<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>

<GridPane
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="450.0"
        prefWidth="450.0"
        fx:controller="main.regex.logic.RegExpTabController"
        xmlns:fx="http://javafx.com/fxml"
        styleClass="root">

    <columnConstraints>
        <ColumnConstraints percentWidth="100"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="95"/>
        <RowConstraints minHeight="10.0" prefHeight="106.0" vgrow="ALWAYS"/>
    </rowConstraints>

    <ListView
            GridPane.fillWidth="true">

        <HBox spacing="10"
              alignment="CENTER_LEFT">

            <Label text="Alphabet:"/>

            <VBox spacing="10"
                  alignment="CENTER">

                <TextField fx:id="alphabetText"
                           text="ab"/>
            </VBox>
        </HBox>

        <HBox spacing="10"
              alignment="CENTER_LEFT">

            <Label text="Start:"/>

            <VBox fx:id="addStartContainer"
                  spacing="10"
                  alignment="CENTER">

                <TextField fx:id="startText"
                           text="a"/>
            </VBox>

            <Button fx:id="addStartField"
                    text="+"
                    onAction="#addStartField"/>
        </HBox>

        <HBox spacing="10"
              alignment="CENTER_LEFT">

            <Label text="Pattern:"/>

            <VBox fx:id="addPatternContainer"
                  spacing="10"
                  alignment="CENTER">

                <TextField fx:id="patternText"
                           text="bab"/>
            </VBox>

            <Button fx:id="addPatternField"
                    text="+"
                    onAction="#addPatternField"/>
        </HBox>

        <HBox spacing="10"
              alignment="CENTER_LEFT">

            <Label text="End:"/>

            <VBox fx:id="addEndContainer"
                  spacing="10"
                  alignment="CENTER">

                <TextField fx:id="endText"
                           text="bab"/>
            </VBox>

            <Button fx:id="addEndField"
                    text="+"
                    onAction="#addEndField"/>
        </HBox>

        <VBox spacing="10"
              alignment="CENTER_LEFT">

            <Label text="Output:"/>

            <TextArea fx:id="outputText"
                      maxHeight="50"
                      id="output-text"
                      editable="false"/>
        </VBox>

        <HBox spacing="10"
              alignment="CENTER">

            <Button fx:id="runButton"
                    text="Uitvoeren"
                    onAction="#onResultButton"/>
        </HBox>
    </ListView>
</GridPane>